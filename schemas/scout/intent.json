{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aura-labs.ai/schemas/scout/intent.json",
  "title": "Scout Intent",
  "description": "Intent registration payload sent by a Scout to AURA Core",
  "type": "object",
  "required": ["category", "description"],
  "properties": {
    "intentId": {
      "type": "string",
      "description": "Unique identifier for this intent (generated by AURA Core if not provided)"
    },
    "category": {
      "type": "string",
      "description": "Product/service category",
      "examples": ["electronics", "travel", "services", "groceries"]
    },
    "description": {
      "type": "string",
      "description": "Natural language description of what the user is looking for",
      "minLength": 3,
      "maxLength": 1000
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Specific keywords to match against Beacon propositions"
    },
    "constraints": {
      "type": "object",
      "properties": {
        "priceRange": {
          "$ref": "../shared/price-range.json"
        },
        "deliveryBy": {
          "type": "string",
          "format": "date-time",
          "description": "Required delivery date"
        },
        "location": {
          "type": "object",
          "properties": {
            "country": { "type": "string" },
            "region": { "type": "string" },
            "postalCode": { "type": "string" }
          }
        },
        "attributes": {
          "type": "object",
          "additionalProperties": true,
          "description": "Category-specific attribute requirements"
        }
      }
    },
    "preferences": {
      "$ref": "../shared/preferences.json"
    },
    "behavioralData": {
      "$ref": "../shared/behavioral-data.json"
    },
    "validUntil": {
      "type": "string",
      "format": "date-time",
      "description": "When this intent expires"
    }
  },
  "additionalProperties": false
}
